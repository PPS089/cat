<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.petservice.mapper.MediaFilesMapper">

    <select id="getMediaByRecordId" resultType="com.example.petpojo.entity.MediaFiles">
        SELECT * FROM media_files
        WHERE record_id = #{recordId}
        ORDER BY upload_time DESC
    </select>

    <select id="getMediaByUserId" resultType="com.example.petpojo.entity.MediaFiles">
        SELECT * FROM media_files
        WHERE uid = #{uid}
        ORDER BY upload_time DESC
    </select>

</mapper>
